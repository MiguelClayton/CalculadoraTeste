{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar main.cpp",
      "type": "process",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-Wall",
        "-Wextra",
        "-g3",
        "main.cpp",
        "-o",
        "output/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
